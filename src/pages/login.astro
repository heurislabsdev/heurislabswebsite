---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
// Import any other components you might need here
---

<Layout title="Login">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Log In</Fragment>
      <Fragment slot="desc">Access your account to continue innovating with us.</Fragment>
    </Sectionhead>

    <div class="mx-auto max-w-xl mt-16">
      <form action="/api/login" method="POST" class="space-y-6">
        <div>
          <label for="email" class="text-gray-700">Email address</label>
          <input type="email" id="email" name="email" required class="w-full mt-1 p-2 border border-gray-300 rounded">
        </div>
        <div>
          <label for="password" class="text-gray-700">Password</label>
          <input type="password" id="password" name="password" required class="w-full mt-1 p-2 border border-gray-300 rounded">
        </div>
        <div>
          <button type="submit" class="w-full bg-green-600 text-white p-2 rounded hover:bg-green-700">
            Log In
          </button>
        </div>
      </form>
      <div class="text-center mt-6">
        <a href="/forgot-password" class="text-gray-600 hover:text-gray-800">Forgot Password?</a>
        <p class="mt-4">
          Donâ€™t have an account? 
          <a href="/signup" class="text-green-600 hover:text-green-800">Sign Up</a>
        </p>
      </div>
    </div>
  </Container>
</Layout>
